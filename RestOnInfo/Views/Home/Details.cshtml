@model Restaurant

@{
    ViewBag.title = Model.Name;
}

<header>
    <link href="https://fonts.googleapis.com/css?family=Spectral:400,500,600,700" rel="stylesheet">
    <style>
        .panel-heading {
            font-family: Sirin Stencil;
            font-weight: 400;
            font-size: 35px;
        }

        .form-group, .form-control {
            font-family: Sirin Stencil;
            font-weight: 400;
            font-size: 15px;
        }

        .fontstyle {
            font-family: Sirin Stencil;
            font-weight: 400;
            font-size: 20px;
        }
    </style>
</header>

<section class="panel panel-default" style="width:50%; margin-left:30%">
    <h1 class="panel-heading">@Model.Name</h1>

    <div class="panel-body">
        <p class="fontstyle">Id : @Model.Id</p>
        
        <p class="fontstyle">Cuisine : @Model.Cuisine</p>
    </div>
    <a class="btn btn-default" style="margin-left:5px; margin-bottom:5px" asp-action="Index" asp-controller="Home">Home</a>
</section>
