@model Restaurant

@{
    ViewBag.title = Model.Name;
}

<section class="panel panel-default" style="width:50%; margin-left:30%">
    <h1 class="panel-heading">@Model.Name</h1>

    <div class="panel-body">
        <p>Id : @Model.Id</p>
        
        <p>Cuisine : @Model.Cuisine</p>
    </div>
    <a class="btn btn-default" style="margin-left:5px; margin-bottom:5px" asp-action="Index" asp-controller="Home">Home</a>
</section>
