<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">RestOnInfo</a>
            </div>
            <div class="navbar-right">
                <!--<vc:login-logout></vc:login-logout>-->
                <!--<a class="btn btn-default" asp-controller="Account" asp-action="Login">Login</a>-->
                @if (User.Identity.IsAuthenticated)
                {
                    <div>Hello, @User.Identity.Name</div>
                    <a class="btn btn-default" asp-controller="Account" asp-action="Logout">Logout</a>
                }
                else
                {
                    <a class="btn btn-default" asp-controller="Account" asp-action="Login">Login</a>
                }
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
        <footer>
            @RenderSection("footer", required: false)
        </footer>
    </div>    
</body>
</html>
